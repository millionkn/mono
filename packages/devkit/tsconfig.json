{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.ts",
  ]
}