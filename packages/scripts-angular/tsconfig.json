{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "composite": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "node",
    ],
    "paths": {
      "@src": [
        "./src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}